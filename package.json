{
  "name": "electron-boilerplate",
  "productName": "Electron Boilerplate",
  "version": "0.0.1",
  "author": {
    "name": "",
    "email": "",
    "url": ""
  },
  "homepage": "https://github.com/",
  "description": "Multilingual Electron boilerplate.",
  "keywords": [
    "timelapse",
    "webcam"
  ],
  "repository": "https://github.com/",
  "license": "MIT",
  "main": "app/main.js",
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "electron .",
    "dist": "build --win",
    "ship": "build --win -p always"
  },
  "build": {
    "productName": "Multilingual Electron boilerplate.",
    "appId": "com.domain.productname",
    "directories": {
      "output": "build"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "",
        "repo": "",
        "private": false
      }
    ],
    "asar": true,
    "files": [
      "app/**/*",
      "!node_modules/*"
    ],
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "icon": "app/assets/app/icons/mac/icon.icns"
    },
    "mac": {
      "icon": "app/assets/app/icons/mac/icon.icns"
    },
    "nsis": {
      "createDesktopShortcut": true,
      "installerIcon": "app/assets/app/icons/win/icon.ico",
      "artifactName": "${productName}-${version}.${ext}"
    },
    "win": {
      "icon": "app/assets/app/icons/win/icon.ico",
      "target": "nsis"
    },
    "linux": {
      "icon": "app/assets/app/icons/linux/icon.png"
    }
  },
  "devDependencies": {
    "electron": "^4.1.5",
    "electron-builder": "^20.40.2",
    "electron-rebuild": "^1.8.4"
  },
  "dependencies": {
    "fs-extra": "^7.0.1",
    "electron-updater": "^4.0.9",
    "keytar": "^4.4.1"
  }
}
